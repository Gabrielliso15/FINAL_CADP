program z;
var
num,min,max: integer;

begin
	min:= 32000;
	max:= -1;
	writeln('Ingrese un numero');
	readln(num);
	while (num <> 0)do begin
		if (num > max) then
			max:= num;
		 if (num < min) then
			min:= num;
		writeln('Ingrese un numero');
		readln(num);	
	end;
	writeln('El numero mas chico es : ',min);
	writeln('El numero mas grande es : ',max);
end.
