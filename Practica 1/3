program zz;

var

auto,maxauto,minauto : integer;
tiempo,tiempomax,tiempomin:real;

begin
	tiempomin:= 30000;
	tiempomax:= -1;
	maxauto:= 0;
	minauto:= 0;
	writeln('Ingrese el numero del auto');
	readln(auto);
	while (auto <> 0) do begin
		writeln('Ingrese el tiempo de vuelta');
		readln(tiempo);
		if (tiempo < tiempomin)then begin
			minauto:= auto;
			tiempomin:= tiempo;
		end;
		if (tiempo > tiempomax)then begin
			maxauto:= auto;
			tiempomax:= tiempo;
		end;
		writeln('Ingrese el numero del auto');
		readln(auto);
	end;
	writeln('El auto que clasifico primero fue :',minauto);
	writeln('El auto que clasifico ultimo fue :',maxauto);
end.
